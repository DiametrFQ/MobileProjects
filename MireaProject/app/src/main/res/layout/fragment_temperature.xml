<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: --Â°C"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/thermometerBackground"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_below="@id/temperatureTextView"
        android:background="@drawable/thermometer_background"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/thermometerFillHot"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_below="@id/temperatureTextView"
        android:background="@drawable/thermometer_fill_hot"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/thermometerFillCold"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_below="@id/thermometerFillHot"
        android:background="@drawable/thermometer_fill_cold"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>